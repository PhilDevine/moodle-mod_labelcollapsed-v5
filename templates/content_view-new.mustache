<div class="no-overflow labelcollapsed-container">
    <h4 role="button"
        class="lc_section collapsed d-flex justify-content-between align-items-center"
        data-toggle="collapse"
        data-target="#lcc{{id}}"
        aria-expanded="false"
        aria-controls="lcc{{id}}"
        style="cursor: pointer; padding: 10px; margin-bottom: 15px; margin-top: 8px;">
        <span class="d-inline-flex align-items-center">
            {{#labelsection}}
                <span class="badge mr-2" style="background-color:{{sectionbgcolor}}; color:{{sectioncolor}};">
                    {{labelsection}}
                </span>
            {{/labelsection}}
            <span>{{name}}</span>
        </span>
        <i class="fa fa-chevron-right toggle-icon ml-2" aria-hidden="true"></i>
    </h4>

    <div id="lcc{{id}}" class="collapse" style="padding-left: 15px;" aria-labelledby="lcc{{id}}">
        <div class="lc-intro">
            {{{intro}}}
        </div>
    </div>
</div>
