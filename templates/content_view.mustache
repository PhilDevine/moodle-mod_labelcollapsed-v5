{{!
    @template mod_labelcollapsed/content_view

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * id int Unique ID
    * labelsection string
    * sectionbgcolor string Background colour section information
    * sectioncolor string Font colour section information
    * name string
    * intro string

    Example context (json):
    {
        'id': 123,
        'labelsection': '1.1',
        'sectionbgcolor': '#123456'
        'sectioncolor': '#123456'
        'name': 'The label',
        'intro': 'The content',
    }
}}
<h4 role="button" class="lc_section collapsed"  data-target="#lcc{{id}}" aria-expanded="false" aria-controls="#lc{{id}}" style="padding:0; margin-bottom:15px; margin-top:8px;">
    {{#labelsection}}
        <span style="background-color:{{sectionbgcolor}};color:{{sectioncolor}};margin-right:8px;padding: 4px 5px 4px 5px;border-radius: 4px 4px 4px 4px;font-weight: bold">{{labelsection}}</span>
    {{/labelsection}}
    {{name}}
</h4>
<div id="lcc{{id}}" class="collapse" style="padding-top:0" aria-labelledby="lcc{{id}}" >
    {{{intro}}}
</div>